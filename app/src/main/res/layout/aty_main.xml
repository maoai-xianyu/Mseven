<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_FFFFFF"
    tools:context="com.mao.cn.mseven.com.mao.cn.mseven.ui.activity.MainActivity">

    <include
        android:id="@+id/rl_header"
        layout="@layout/include_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_header">

        <RelativeLayout
            android:id="@+id/rl_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/d10">

            <Button
                android:id="@+id/btn_desc_net"
                style="@style/home_main_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="网络请求" />

            <Button
                android:id="@+id/btn_desc_rxjava"
                style="@style/home_main_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_desc_net"
                android:text="rxjava学习" />


            <Button
                android:id="@+id/btn_desc_image"
                style="@style/home_main_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_desc_rxjava"
                android:text="image图片" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
